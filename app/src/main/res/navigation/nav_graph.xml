<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/noteFragment"
        android:name="com.example.notesapp.fragments.NoteFragment"
        android:label="fragment_note"
        tools:layout="@layout/fragment_note">
        <action
            android:id="@+id/action_noteFragment_to_saveOrUpdateFragment"
            app:destination="@id/saveOrUpdateFragment" />
        <action
            android:id="@+id/action_noteFragment_to_authFragment"
            app:destination="@id/authFragment" />
    </fragment>
    <fragment
        android:id="@+id/saveOrUpdateFragment"
        android:name="com.example.notesapp.fragments.SaveOrUpdateFragment"
        android:label="fragment_save_or_update"
        tools:layout="@layout/fragment_save_or_update">
        <action
            android:id="@+id/action_saveOrUpdateFragment_to_noteFragment"

            app:destination="@id/noteFragment" />

        <argument
            android:name="note"
            android:defaultValue="@null"
            app:argType="com.example.notesapp.model.Note"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/authFragment"
        android:name="com.example.notesapp.auth.AuthFragment"
        android:label="fragment_auth"
        tools:layout="@layout/fragment_auth">
        <action
            android:id="@+id/action_authFragment_to_noteFragment"
            app:destination="@id/noteFragment" />
    </fragment>

</navigation>